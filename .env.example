# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env file with actual credentials!

# =================================
# Database Configuration
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=curriculum
DB_USER=app_user
DB_PASSWORD=your_secure_password_here

# SQLite path (if using SQLite instead of PostgreSQL)
SQLITE_DB_PATH=curriculum.db

# =================================
# Cloud Service Credentials
# =================================

# Flow-Nexus Cloud Platform
FLOW_NEXUS_EMAIL=your_email@example.com
FLOW_NEXUS_API_KEY=your_api_key_here

# Migration Signing (for database migration integrity)
MIGRATION_SIGNING_KEY=generate_with_openssl_rand_hex_32

# =================================
# Security Settings
# =================================

# Session secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET=your_session_secret_here

# JWT secret (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET=your_jwt_secret_here

# Password reset token expiry (hours)
PASSWORD_RESET_EXPIRY=24

# =================================
# Application Settings
# =================================

# Environment mode
NODE_ENV=development
PYTHON_ENV=development

# Debug mode (NEVER use in production!)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =================================
# Performance Settings
# =================================

# Cache settings
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600

# Database connection pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =================================
# Feature Flags
# =================================

# Enable experimental features
ENABLE_NEURAL_TRAINING=False
ENABLE_CLOUD_SYNC=False
ENABLE_TELEMETRY=False

# =================================
# Testing Configuration
# =================================

# Test database (separate from production!)
TEST_DB_PATH=test_curriculum.db
TEST_DB_HOST=localhost

# Mock external services in tests
MOCK_EXTERNAL_SERVICES=True

# =================================
# Security & Privacy
# =================================

# Allowed origins for CORS (if web interface exists)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Data retention (days)
LOG_RETENTION_DAYS=30
SESSION_RETENTION_DAYS=90

# =================================
# How to Use
# =================================

# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values
# 3. Verify .env is in .gitignore
# 4. NEVER commit .env to version control!

# Generate secure secrets:
# python -c "import secrets; print('SESSION_SECRET=' + secrets.token_hex(32))"
# python -c "import secrets; print('JWT_SECRET=' + secrets.token_urlsafe(32))"
# openssl rand -hex 32  # For MIGRATION_SIGNING_KEY
